          <form action='/answers/<%= answer.id %>' method='post' class="delete">
          <input type='hidden' name="_method" value="delete">
          <input class='button' type='submit' value='delete post'>
          </form>
      </td>
    <% end %>


    <form action='/answers/<%= answer.id %>' method='post' class="delete">
      <input type='hidden' name="_method" value="delete">
