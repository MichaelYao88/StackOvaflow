<h1 class='title'><%=@question.question_title%></h1>

<p class='body'><%=@question.question_body%>
<% if current_user == @question.questioner %>
  <a href='<%= @question.id %>/edit' class="edit-link">Edit</a>
<% end %>
</p>

<ul>
<%@question.answers.each do |answer|%>
  <li class='answer'>ANSWER: <%=answer.text%> -- <%=answer.answerer.name%></li>
  <li>
    <form action='/questions/<%= @question.id %>/answers/<%= answer.id %>/edit' method='get'>
      <input class ='button' type='submit' value='edit post'>
    </form>
    <form action='/questions/<%= @question.id %>/answers/<%= answer.id %>' method='post'>
      <input type='hidden' name="_method" value="delete">
      <input class='button' type='submit' value='delete post'>
    </form>
  </li>
    <ul>
    <% answer.comments.each do |comment|%>
      <li>COMMENT: <%=comment.text%> -- COMMENTER: <%=comment.commenter.name%></li>
    <%end%>
  </ul>
<%end%>
</ul>

<form action='/questions/<%= @question.id %>/answers/new' method='get'>
  <input class='button' type='submit' value='answer post!'>
</form>




